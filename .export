export LS_COLORS="$(vivid generate dracula)"
export TSS_LOG="-level verbose -file $HOME/.tsserver_temp/tsserver.log";
export MANPAGER='less -X';
export EDITOR='nvim';
export WORKON_HOME=$HOME/.virtualenvs
export PATH="$PATH:{KREW_ROOT:-$HOME/.krew}/bin:$HOME/.local/bin:$HOME/.local/share/gem/ruby/3.0.0/bin:/var/lib/flatpak/exports/share:$HOME/.local/share/flatpak/exports/share:$HOME/go/bin:$HOME/kde/usr/bin:$HOME/.istioctl/bin:/opt/depot_tools:/usr/local/go/bin:$HOME/.cargo/bin";
export HISTORY_PATH="$HOME/.local/share/zsh/history";
export BROWSER=/usr/bin/chromium
export LIBAVCODEC_VERSION_MAJOR=60
export GIT_PAGER="diff-so-fancy"
# ignore ones with a length greater than 50 -- thanks to https://github.com/Aloxaf
export ZSH_AUTOSUGGEST_HISTORY_IGNORE='?(#c50,)'
GIT_ALIAS=git

# Enable persistent REPL history for `node`.
export NODE_REPL_HISTORY=$HOME/.node_history;
# Allow 32Â³ entries; the default is 1000.
export NODE_REPL_HISTORY_SIZE='32768';
# Use sloppy mode by default, matching web browsers.
export NODE_REPL_MODE='sloppy';

# Make Python use UTF-8 encoding for output to stdin, stdout, and stderr.
export PYTHONIOENCODING='UTF-8';

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';

export ACLOCAL_FLAGS="-I /opt/gnome/share/aclocal -I /usr/share/aclocal"

# Path to the emoji-fzf executable
EMOJI_FZF_BIN_PATH="emoji-fzf"

# Bind to Ctrl-K by default. Unset to disable.
EMOJI_FZF_BINDKEY="^k"

# Fuzzy matching tool to use for the emoji selection
EMOJI_FZF_FUZZY_FINDER=fzf

# Optional arguments to pass to the fuzzy finder tool
EMOJI_FZF_FUZZY_FINDER_ARGS=

# Path to an optional custom alias JSON file
EMOJI_FZF_CUSTOM_ALIASES=

# Set to non-empty value to prepend the emoji before the emoji aliases
EMOJI_FZF_PREPEND_EMOJIS=1

# Set to non-empty value to skip the creation of shell aliases
EMOJI_FZF_NO_ALIAS=

# Set clipboard management tool
EMOJI_FZF_CLIPBOARD="xsel -b"

export DEBIAN_PREVENT_KEYBOARD_CHANGES=yes

export QT_QPA_PLATFORMTHEME=qt5ct
export LOG_LEVEL=DEBUG
export COLOR_LOGGING=enabled

export FZF_DEFAULT_OPTS=" \
--color=bg+:#313244,bg:#1e1e2e,spinner:#f5e0dc,hl:#f38ba8 \
--color=fg:#cdd6f4,header:#f38ba8,info:#cba6f7,pointer:#f5e0dc \
--color=marker:#f5e0dc,fg+:#cdd6f4,prompt:#cba6f7,hl+:#f38ba8"
