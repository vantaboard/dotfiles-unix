        format = " <span color='#f98304'>%status</span> %percentage"
        format_down = ""
        last_full_capacity = true
        integer_battery_capacity = true

        status_chr  = "ðŸ”Œ"
        status_bat  = "ðŸ”‹"
        status_unk  = ""
        status_full = "ðŸ§¡"

        low_threshold = 15
        threshold_type = time
        # (Colors from general apply: below threshold â†’ bad/red)
}

memory {
        format = "<span color='#f98304'>RAM</span> %available"
        threshold_degraded = "1G"
        format_degraded = "<span color='#ffae42'>RAM</span> %available"
}

tztime date {
        format = "%m.%d."
}

tztime local {
        # Keep time high-contrast white
        format = "<span color='#FFFFFF'>%l:%M %p</span>"
}
