general {
        colors = true
        interval = 5
        markup = pango

        # Theme: orange highlight, urgent red, soft amber for degraded
        color_good     = "#f98304"
        color_degraded = "#ffae42"
        color_bad      = "#E5201D"
}

order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_usage"
order += "disk /"
order += "battery all"
order += "memory"
order += "tztime date"
order += "tztime local"

wireless _first_ {
        format_up = "<span color='#f98304'>ðŸ“¡</span> %essid"
        format_down = ""
}

ethernet _first_ {
        format_up = "<span color='#f98304'>ðŸ–§</span> %ip"
        format_down = ""
}

cpu_usage {
        format = "<span color='#f98304'>CPU</span> %usage"
}

disk "/" {
        format = "<span color='#f98304'>ï‚ </span> %avail"
}

